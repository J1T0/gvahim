#:kivy 1.0.9
	

<ConnectionWindowBase>
	BoxLayout:
		orientation:'vertical'
		Label:
			text: 'type ip and port of a peer [ip:port]'
		TextInput:
			multiline: False
			font_size: 20
			size: 200,42
		Button:
			text:'connect'
			on_press: root.connect()
		
<ConnectionWindow>
	orientation:'vertical'
	Window:
		orientation:'vertical'
		canvas:
			Rectangle:
				size: 200,20
<MainScreen>
	Button:
		pos: root.width-self.width, root.height-20
		size: 200,20
		text: 'Connect to new peer'
		on_press: root.show_connect_window()
